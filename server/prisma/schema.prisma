generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id    Int     @id @default(autoincrement())
  email String  @unique
  name  String?
  notes Note[]
  tags  Tag[]
}

model Note {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  content   String?
  textColor String?
  cardColor String?
  user      User?    @relation(fields: [userId], references: [id])
  userId    Int?
  tags      Tag[]
}

model Tag {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  name      String
  user      User?    @relation(fields: [userId], references: [id])
  userId    Int?
  notes     Note[]
}
